@model List<ClienteModel>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="text-center">
    
    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            This is a danger alert—check it out!
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    <h1 class="display-5">Lista de Clientes</h1>
    <br /><br />

    
    <table class="table" id="table-clientes">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nome</th>
              <th scope="col">CPF</th>
              <th scope="col">Sexo</th>
              <th scope="col">CEP</th>
              <th scope="col">Rua</th>
              <th scope="col">Número</th>
              <th scope="col">Compl.</th>
              <th scope="col">Bairro</th>
              <th scope="col">Cidade</th>
              <th scope="col">UF</th>
              <th scope="col"></th>
            </tr>
          </thead>
            <tbody>
                 @if(Model != null && Model.Any())
                 {
                    foreach (ClienteModel cliente in Model)
                    {
                        <tr>
                          <th scope="row">@cliente.Id</th>
                          <td>@cliente.Nome</td>
                          <td>@cliente.CPF</td>
                          <td>@cliente.Sexo</td>
                          <td>@cliente.CEP</td>
                          <td>@cliente.Rua</td>
                          <td>@cliente.Numero</td>
                          <td>@cliente.Complemento</td>
                          <td>@cliente.Bairro</td>
                          <td>@cliente.Cidade</td>
                          <td>@cliente.UF</td>
                          <td>
                              <div class="btn-group" role="group" aria-label="Basic outlined example">
                                  <a role="button" class="btn btn-outline-primary" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="Editar">Editar</a>
                                  <a role="button" class="btn btn-outline-danger" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="ApagarConfirmacao">Apagar</a>              
                              </div>
                          </td>
                        </tr>
                    }
                 }
            </tbody>
    </table>
    

    <br />
    
    <br />
    <br />
    <div class="">
        <a class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Criar">Adicionar Novo Cliente</a>
    </div>
</div>
