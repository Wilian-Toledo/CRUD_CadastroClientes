@model List<ClienteModel>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="text-center">
    
<h1 class="display-5">Lista de Clientes</h1>
<br /><br />

  <!--  <div class="input-group rounded">
      <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
      <span class="" id="search-addon">
        <a class="btn btn-primary" role="button" asp-action="Pesquisar">Pesquisar</a>
      </span>
    </div>-->

<table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome</th>
          <th scope="col">CPF</th>
          <th scope="col">RG</th>
          <th scope="col">D.E.</th>
          <th scope="col">O.E.</th>
          <th scope="col">UF</th>
          <th scope="col">Data Nasc.</th>
          <th scope="col">Sexo</th>
          <th scope="col">Est.Civil</th>      
        </tr>
      </thead>
        <tbody>
             @if(Model != null && Model.Any())
             {
                foreach (ClienteModel cliente in Model)
                {
                    <tr>
                      <th scope="row">@cliente.Id</th>
                      <td>@cliente.Nome</td>
                      <td>@cliente.CPF</td>
                      <td>@cliente.RG</td>
                      <td>@cliente.DataExp</td>
                      <td>@cliente.OrgExp</td>
                      <td>@cliente.UfExp</td>
                      <td>@cliente.Nascimento</td>
                      <td>@cliente.Sexo</td>
                      <td>@cliente.EstCivil</td>
                      <td>
                          <div class="btn-group" role="group" aria-label="Basic outlined example">
                              <a role="button" class="btn btn-outline-primary" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="Editar">Editar</a>
                              <a role="button" class="btn btn-outline-danger" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="ApagarConfirmacao">Apagar</a>              
                          </div>
                      </td>
                    </tr>
                }
             }
        </tbody>
</table>

<br />
<h1 class="display-5">Endereço dos Clientes</h1>

<br />

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">CEP</th>
      <th scope="col">Logradouro</th>
      <th scope="col">Número</th>
      <th scope="col">Complemento</th>
      <th scope="col">Bairro</th>
      <th scope="col">Cidade</th>
      <th scope="col">UF</th>
    </tr>
  </thead>
  <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (ClienteModel cliente in Model)
                {
                    <tr>
                      <th scope="row">@cliente.Id</th>
                      <td>@cliente.Nome</td>
                      <td>@cliente.CEP</td>
                      <td>@cliente.Rua</td>
                      <td>@cliente.Numero</td>
                      <td>@cliente.Complemento</td>
                      <td>@cliente.Bairro</td>
                      <td>@cliente.Cidade</td>
                      <td>@cliente.UF</td>
                      <td>
                          <div class="btn-group" role="group" aria-label="Basic outlined example">
                              <a role="button" class="btn btn-outline-primary" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="Editar">Editar</a>
                              <a role="button" class="btn btn-outline-danger" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="ApagarConfirmacao">Apagar</a>              
                          </div>
                      </td>
                    </tr>
                }
            }
            
  </tbody>
</table>

<br />
