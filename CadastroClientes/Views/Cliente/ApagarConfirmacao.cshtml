@model ClienteModel
@{
    ViewData["Title"] = "Confirmação apagar o Cliente";
}

<div class="text-center">
    <h3>Deseja remover o Cliente (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Cliente" asp-action="Index">Cancelar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Cliente" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar Exclusão</a>